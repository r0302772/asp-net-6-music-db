@model Music.db.ViewModels.Genre.DeleteGenreViewModel

@{
	ViewData["Title"] = $"Delete {Model.Name}";
}

<div>
	<h5>Delete genre: @Model.Name</h5>
</div>
<div>
	<form asp-action="Delete">
		<input type="hidden" asp-for="GenreId" />
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="row pb-1">
			Are you sure you want to delete: @Model.Name?
		</div>

		<a class="btn btn-secondary" asp-controller="Genre" asp-action="List">Cancel</a>
		<button type="submit" class="btn btn-primary">Delete</button>
	</form>
</div>