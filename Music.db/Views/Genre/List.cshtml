@model Music.db.ViewModels.Genre.GenreListViewModel

@{
	ViewData["Title"] = "Genres";
}

<h1 class="text-center display-3">Genres</h1>

<table class="table table-hover">
	<thead>
		<tr>
			<th scope="col">
				ID
			</th>
			<th scope="col">
				Name
			</th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var genre in Model.Genres)
		{
			<tr>
				<td>
					@genre.Id
				</td>
				<td>
					<a asp-controller="Genre" asp-action="Details" asp-route-id="@genre.Id">
						@genre.Name
					</a>
				</td>
				<td>
					<a class="text-primary" asp-controller="Genre" asp-action="Update" asp-route-id="@genre.Id">
						<i class="bi bi-pencil-square"></i>
					</a>
				</td>
				<td>
					<a class="text-danger" asp-controller="Genre" asp-action="Delete" asp-route-id="@genre.Id">
						<i class="bi bi-x-lg"></i>
					</a>
				</td>
			</tr>
		}
	</tbody>
</table>